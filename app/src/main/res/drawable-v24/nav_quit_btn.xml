<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>

            <gradient android:angle="270" android:endColor="#ED1C00" android:startColor="@color/red" />
            <corners android:bottomRightRadius="30dp" />

            <stroke android:width="1px" android:color="#4D4D4D " />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>

            <gradient android:angle="270" android:endColor="@color/red_hover" android:startColor="@color/red_hover" />
            <corners android:bottomRightRadius="30dp" />

        </shape>
    </item>

</selector>
