<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="200dp"
    android:background="@drawable/custom_popup">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="189dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="254dp"
        android:fontFamily="@font/opensans_regular"
        android:text="Şifre Giriniz."
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="114dp"
        android:layout_height="79dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/btn_hover_memory"
        android:fontFamily="@font/opensans_bold"
        android:text="Giriş"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/etAdminPassword"
        app:layout_constraintStart_toEndOf="@+id/etAdminPassword"
        app:layout_constraintTop_toTopOf="@+id/etAdminPassword" />

    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="378dp"
        android:layout_height="78dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>