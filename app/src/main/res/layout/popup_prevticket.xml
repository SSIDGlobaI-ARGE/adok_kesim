<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quality_prevticket"
    android:background="@drawable/custom_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="507dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:digits="0123456789"
        android:iconifiedByDefault="false"
        android:inputType="number|textVisiblePassword"
        app:layout_constraintEnd_toEndOf="@+id/tvFaultHeader"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/tvFaultHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvFaultHeader" />

    <TextView
        android:id="@+id/tvFaultHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/barkod_numaras_giriniz"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/barcode_view"
        android:layout_width="509dp"
        android:layout_height="520dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tvFaultHeader"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/tvFaultHeader"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

</androidx.constraintlayout.widget.ConstraintLayout>
